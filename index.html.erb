<% @students.each do |student| %>
  <p><span><%= link_to student.email, student_path(student) %></span> <span><%= student.name %></span> <span><%= link_to "Delete Student", student_path(student), method: :delete, data: {confirm: "Are you sure you want to delete this student???"} %></span></p>
<% end %>
